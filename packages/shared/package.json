{
  "name": "@algosheet/shared",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "cd ../.. && biome check packages/shared/src/",
    "lint:fix": "cd ../.. && biome check --write packages/shared/src/",
    "format": "cd ../.. && biome format --write packages/shared/src/"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
