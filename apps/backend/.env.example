# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Server
PORT=3100
NODE_ENV=development

# Litestream S3 Backup (Required in production)
# For Cloudflare R2: https://developers.cloudflare.com/r2/api/s3/tokens/
LITESTREAM_ACCESS_KEY_ID=your_r2_access_key_id
LITESTREAM_SECRET_ACCESS_KEY=your_r2_secret_access_key
LITESTREAM_BUCKET=your-bucket-name
LITESTREAM_ENDPOINT=https://[account-id].r2.cloudflarestorage.com
LITESTREAM_REGION=auto